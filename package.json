{
  "name": "modbus-analyzer",
  "version": "1.0.0",
  "description": "Aplicaci√≥n Electron para leer datos de analizador de gases mediante Modbus RTU",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "cross-env NODE_ENV=development electron . --dev",
    "build": "electron-builder",
    "build-portable": "electron-packager . ModbusAnalyzer --platform=win32 --arch=x64 --out=dist --overwrite",
    "console": "node modbus-analyzer.js"
  },
  "keywords": [
    "modbus",
    "rtu",
    "analyzer",
    "gases",
    "serial",
    "electron"
  ],
  "author": "Felipe Opazo",
  "license": "MIT",
  "dependencies": {
    "exceljs": "^4.4.0",
    "serialport": "^12.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.felipeopazo.modbus-analyzer",
    "productName": "Modbus Analyzer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "styles.css",
      "modbus-analyzer.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "ModbusAnalyzer-${version}-portable.exe"
    }
  }
}
